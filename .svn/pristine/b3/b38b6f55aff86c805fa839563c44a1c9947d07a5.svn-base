<%@ Page Title="" Language="C#" MasterPageFile="~/MasterPage.Master" AutoEventWireup="true" CodeBehind="cutoff.aspx.cs" Inherits="HRIS_APPELECTRIC.Pages.Admin.TK.cutoff" %>

